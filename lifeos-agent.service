[Unit]
Description=LifeOS Autonomous Agent System - Complete Automation
After=network.target lifeos-web.service
Wants=network.target
Requires=lifeos-web.service

[Service]
Type=exec
User=ikino
Group=ikino
WorkingDirectory=/home/ikino/dev/autonomous-multi-llm-agent
Environment=PATH=/home/ikino/dev/autonomous-multi-llm-agent/venv/bin
ExecStart=/home/ikino/dev/autonomous-multi-llm-agent/venv/bin/python main.py
Restart=always
RestartSec=15
StandardOutput=journal
StandardError=journal
SyslogIdentifier=lifeos-agent

# Memory and resource limits
MemoryMax=2G
CPUQuota=80%

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/ikino/dev/autonomous-multi-llm-agent

[Install]
WantedBy=multi-user.target